<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection enabledByDefault="true" level="ERROR"
                         bundle="messages.EclipsePDEPartialBundles_locale"
                         key="inspection.kotlinPackageAccessibility"
                         groupBundle="messages.EclipsePDEPartialBundles_locale"
                         groupKey="inspection.group"
                         implementationClass="cn.varsa.idea.pde.partial.plugin.kotlin.inspection.KotlinPackageAccessibilityInspection"/>
        <localInspection enabledByDefault="true" level="ERROR"
                         bundle="messages.EclipsePDEPartialBundles_locale"
                         key="inspection.kotlinImport"
                         groupBundle="messages.EclipsePDEPartialBundles_locale"
                         groupKey="inspection.group"
                         implementationClass="cn.varsa.idea.pde.partial.plugin.kotlin.inspection.KotlinImportInspection"/>

        <implicitUsageProvider
                implementation="cn.varsa.idea.pde.partial.plugin.kotlin.inspection.PluginsImplicitUsageProvider"/>
        <implicitUsageProvider
                implementation="cn.varsa.idea.pde.partial.plugin.kotlin.inspection.ActivatorImplicitUsageProvider"/>
    </extensions>
</idea-plugin>
