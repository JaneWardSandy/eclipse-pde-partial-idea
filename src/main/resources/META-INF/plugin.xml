<idea-plugin>
  <id>cn.varsa.idea.eclipse.pde.partial</id>
  <name>Eclipse PDE Partial</name>
  <category>JVM Frameworks</category>
  <vendor email="lyj19940214@live.com" url="https://github.com/JaneWardSandy">JaneWardSandy</vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends config-file="JavaSupport.xml">com.intellij.modules.java</depends>
  <depends config-file="KotlinSupport.xml" optional="true">org.jetbrains.kotlin</depends>

  <resource-bundle>messages.Notification</resource-bundle>
  <resource-bundle>messages.ToolWindow</resource-bundle>
  <resource-bundle>messages.Inspection</resource-bundle>

  <extensions defaultExtensionNs="com.intellij">
    <fileBasedIndex implementation="cn.varsa.idea.pde.partial.core.manifest.BundleManifestIndexImpl"/>
    <toolWindow
        id="BundlesToolWindow"
        secondary="true"
        icon="AllIcons.Actions.Minimap"
        anchor="right"
        factoryClass="cn.varsa.idea.pde.partial.core.manifest.BundlesToolWindowFactory"/>

    <completion.contributor
        language="Manifest"
        implementationClass="cn.varsa.idea.pde.partial.manifest.completion.BasicBundleManifestCompletionContributor"/>
    <manifest.parser.provider
        implementation="cn.varsa.idea.pde.partial.manifest.lang.BasicBundleManifestHeaderParserProvider"/>

    <facetType implementation="cn.varsa.idea.pde.partial.core.facet.PDEFacetType"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <notificationGroup
        displayType="STICKY_BALLOON"
        id="cn.varsa.idea.pde.partial.notification.important"
        isLogByDefault="true"
        bundle="messages.Notification"
        key="notification.group.important"/>
  </extensions>
</idea-plugin>
